{
  "env": {
    "browser": true,
    "es2021": true,
    "jest/globals": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "client/plugin:react/recommended",
    "client/plugin:react/jsx-runtime"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react", "jest", "prettier"],
  "rules": {},
  "settings": {
    "react": {
      "version": "18.2.0"
    }
  },
  "ignorePatterns": [
    "*.scss",
    "*.css",
    "*.json",
    "*.md",
    "*.html",
    "client/dist/*"
  ]
}
