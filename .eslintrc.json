{
  "env": {
    "browser": true,
    "es2021": true,
    "jest/globals": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react/jsx-runtime"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react", "jest", "prettier"],
  "rules": {},
  "settings": {
    "react": {
      "version": "18.2.0"
    }
  },
  "ignorePatterns": ["*.scss", "*.css", "*.json", "*.md", "*.html", "dist/*"]
}
